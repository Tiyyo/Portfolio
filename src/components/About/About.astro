<style lang="scss">
  .about-background {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }
  .photo-profile {
    height: 2em;
    width: 2em;
    border-radius: 50%;
    overflow: hidden;
    position: absolute;
    top: clamp(15px, 8vw, 75px);
    left: 50%;
    transform: translateX(-50%);

    @media screen and (min-width: 320px) {
      height: 3.5em;
      width: 3.5em;
    }

    @media screen and (min-width: 480px) {
      height: 5.5em;
      width: 5.5em;
    }
    @media screen and (min-width: 768px) {
      height: 7.5em;
      width: 7.5em;
    }
    @media screen and (min-width: 1200px) {
      height: 9.5em;
      width: 9.5em;
    }

    img {
      height: 100%;
      object-fit: cover;
      object-position: -3vw;

      @media screen and (min-width: 1200px) {
        object-position: -30px;
      }
    }
  }

  .text {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    font-size: calc(0.3em + 1.5vw);
    line-height: 1.2;
    color: rgb(220, 233, 230);

    @media screen and (min-width: 320px) {
      font-size: calc(0.32em + 1.5vw);
    }
    @media screen and (min-width: 480px) {
      font-size: calc(0.49em + 1.5vw);
    }
    @media screen and (min-width: 590px) {
      font-size: calc(0.58em + 1.5vw);
    }
    @media screen and (min-width: 635px) {
      font-size: calc(0.63em + 1.5vw);
    }
    @media screen and (min-width: 1040px) {
      font-size: calc(0.63em + 1.34vw);
    }

    @media screen and (min-width: 1200px) {
      font-size: 1.5em;
    }

    .dots {
      border-bottom: 2px dotted var(--mint);
      width: 24px;
      margin: 1em auto;
      @media screen and (min-width: 320px) {
      }

      @media screen and (min-width: 480px) {
        border-bottom: 4px dotted var(--mint);
      }
    }

    &__top {
      margin-top: 28%;
      margin-left: auto;
      margin-right: auto;
      width: 57%;
      text-align: center;

      @media screen and (min-width: 1200px) {
        margin-top: 30%;
      }
    }
    &__middle {
      margin: 0 auto;
      text-align: center;
      width: 85%;
    }
    &__low {
      margin: 0 auto 0 37%;
      text-align: center;
      width: 53.5%;
    }
  }
</style>
