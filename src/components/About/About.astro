<style lang="scss">
  .about-background {
    display: flex;
    max-width: 1200px;
    margin: 0 auto;
    @media screen and (max-width: 768px) {
      flex-direction: column-reverse;
      padding-top: 3vh;
    }
  }

  .photo-profile {
    flex: 3 0 60%;
    padding: 2vh 5vw;
    opacity: 0;

    img {
      border-radius: 0.3em;
      height: 100%;
      object-fit: cover;
      object-position: center;
    }
  }
  .photo-profile.animate {
    animation: fadeIn 0.3s linear 1.2s 1 normal forwards;
  }
  @keyframes fadeIn {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0px);
    }
  }
  .text.animate {
    opacity: 1;
  }
  .text__top {
    animation: fadeIn 0.3s linear 0.4s 1 normal forwards;
  }
  .text__middle {
    animation: fadeIn 0.3s linear 0.8s 1 normal forwards;
  }
  .text__low {
    animation: fadeIn 0.3s linear 1.2s 1 normal forwards;
  }

  .text {
    width: 100%;
    height: 100%;
    color: var(--title_soft);
    font-size: clamp(1em, 5vw, 1.5em);
    line-height: 1.2;
    opacity: 0;
    transition: 0.2s;

    &__top {
      opacity: 0;
      transform: translateY(20px);
    }
    &__middle {
      opacity: 0;
      transform: translateY(20px);
    }
    &__low {
      opacity: 0;
      transform: translateY(20px);
    }

    .accent-text {
      color: var(--teal);
    }

    .dots {
      border-bottom: 2px dotted var(--mint);
      width: 24px;
      margin: 1em auto;
    }
  }
</style>
<script>
  const aboutBackground = document.querySelector(".about-background")!;
  const photoProfile = document.querySelector(".photo-profile")!;
  const textTop = document.querySelector(".text__top")!;
  const textMiddle = document.querySelector(".text__middle")!;
  const textLow = document.querySelector(".text__low")!;
  const text = document.querySelector(".text")!;
  const startAnim = (elements: Array<Element>): void => {
    elements.forEach((el) => el.classList.add("animate"));
  };
  const isInView = (el: Element) => {
    const elementTop = el.getBoundingClientRect().top;
    return elementTop <= window.innerHeight;
  };

  window.addEventListener("scroll", () => {
    if (isInView(aboutBackground)) {
      startAnim([
        aboutBackground,
        photoProfile,
        textTop,
        textMiddle,
        textLow,
        text,
      ]);
    }
  });
</script>
