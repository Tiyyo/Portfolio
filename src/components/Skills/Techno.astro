---
export interface Props {
  link: string;
  skillName: string;
}
const { link, skillName } = Astro.props;
---

<div class="skill">
  <div class="skill__logo">
    <img src={link} alt="skill" />
  </div>
  <p class="skill__name">{skillName}</p>
</div>

<style lang="scss">
  .skill {
    width: 16%;
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 0.5em;
    &__logo {
      height: 1.6em;
      width: 1.6em;
      overflow: hidden;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0px 0px 20px 2px var(--shadow);

      @media screen and (min-width: 480px) {
        height: 2em;
        width: 2em;
      }

      @media screen and (min-width: 768px) {
        height: 2.6em;
        width: 2.6em;
      }
      @media screen and (min-width: 768px) {
        height: 3.7em;
        width: 3.7em;
      }
      img {
        object-fit: contain;
        width: 100%;
        aspect-ratio: 1/1;
      }
    }
    &__name {
      color: var(--title_soft);
      font-size: 0.57em;
      letter-spacing: 0.5px;
      @media screen and (min-width: 480px) {
        font-size: 0.67em;
      }
      @media screen and (min-width: 1200px) {
        font-size: 0.94em;
      }
    }
  }
</style>
