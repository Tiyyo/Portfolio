---
import GithubIcon from "../../assets/icons/GithubIcon.astro";
import LinkedIn from "../../assets/icons/LinkedIn.astro";
import MailIcon from "../../assets/icons/MailIcon.astro";
---

<div class="social-links">
  <a href="https://www.linkedin.com/in/steeve-matou/" target="_blank">
    <div id="linkedin" class="social-btn flex-center" aria-role="button">
      <LinkedIn height={20} width={20} />
      <span>in/steeve-matou</span>
    </div>
  </a>
  <a href="https://github.com/Tiyyo" target="_blank">
    <div id="github" class="social-btn flex-center" aria-role="button">
      <GithubIcon height={20} width={20} />
      <span>Tiyyo</span>
    </div>
  </a>
  <div id="mail-contact" class="social-btn flex-center" aria-role="button">
    <MailIcon />
    <span>steeve.matou@gmail.com</span>
  </div>

  <style lang="scss">
    .social-links,
    .flex-center {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .social-btn {
      cursor: pointer;
      height: 40px;
      width: 40px;
      color: var(--full);
      border-radius: 10px;
      box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
      background-color: var(--light_background);
      margin: 0.35em;
      transition: 0.3s;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .social-btn span {
      width: 0px;
      overflow: hidden;
      transition: 0.3s;
      text-align: center;
      margin-left: 5px;
    }

    .social-btn:hover {
      width: 175px;
      border-radius: 5px;
    }

    .social-btn:hover span {
      padding: 2px;
      width: fit-content;
      vertical-align: bottom;
    }
    span {
      font-size: 0.7em;
    }
  </style>
</div>
<script>
  const mailContact = document.getElementById("mail-contact")!;

  mailContact.addEventListener("click", () => {
    window.open("mailto:steeve.matou@gmail.com");
  });
</script>
