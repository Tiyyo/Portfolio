---
import SendIcon from "../../assets/icons/SendIcon.astro";
---

<form>
  <h3>
    Let's talk about a <span>Project</span>, <span>Collaboration</span> or an <span
      >Idea</span
    > !
  </h3>
  <div class="inputs">
    <div class="input name">
      <label for="name">Full Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="John Doe"
      />
    </div>
    <div class="input subject">
      <label for="subject">Subject</label>
      <input type="text" id="subject" name="subject" />
    </div>
  </div>
  <div class="input email">
    <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="john.doe@gmail.com"
      required
    />
  </div>
  <div class="input message">
    <label for="message">Your message</label>
    <textarea
      id="message"
      rows="10"
      placeholder="Type your message here..."
      required></textarea>
  </div>
  <button type="submit">
    <SendIcon />
    <p>Send Message</p>
  </button>
</form>

<style lang="scss">
  h3 {
    text-align: center;
    font-size: 1.4em;
    margin: 1em 0;
    line-height: 1.3;

    span {
      color: var(--accent_color);
      font-family: "Kaushan Script", cursive;
      font-size: 1.3em;
      font-weight: bold;
    }
  }
  form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
    margin: 25px auto;
    padding: 1em;
    border: 2px dotted var(--border);
    background-color: var(--light_background);
    border-radius: 0.5em;
    box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
    max-width: 650px;
  }

  .inputs {
    display: flex;
    flex-direction: column;
    row-gap: 0.2em;
    width: 100%;
    margin: 0.2em 0;

    @media screen and (min-width: 768px) {
      flex-direction: row;
    }
  }
  .input {
    display: flex;
    flex-direction: column;
    row-gap: 0.2em;
    width: 100%;
    margin: 0.2em 0;

    label {
      font-size: 0.7em;
      padding-left: 3px;
    }

    input {
      height: clamp(18px, 30px, 36px);
      border-radius: 0.31em;
      border: none;
      border-bottom: 1px solid var(--accent_color_light);
      font-size: 0.7em;
      padding-left: 5px;
      background-color: transparent;
      color: var(--text);

      &::placeholder {
        padding-left: 7px;
        font-size: 10px;
        color: var(--accent_color_light);
      }

      &:focus {
      }
    }
    textarea {
      border-radius: 0.31em;
      border: 1px solid var(--accent_color_light);
      font-size: 0.8em;
      padding-left: 5px;
      resize: none;
      background-color: transparent;
      padding-top: 5px;
      color: var(--text);
      border-radius: 0.2em;

      &::placeholder {
        font-size: 1.2em;
        padding: 7px;
        color: var(--accent_color_light);
      }
    }
  }

  #name,
  #subject {
    @media screen and (min-width: 768px) {
      max-width: 220px;
    }
  }

  button {
    position: relative;
    font-family: "Atkinson", system-ui, sans-serif;
    font-weight: bold;
    background-color: var(--teal);
    width: 50%;
    display: flex;
    column-gap: 0.5em;
    align-items: center;
    justify-content: center;
    padding: 0.5em 0;
    border-radius: 0.3em;
    margin: 1vh 0;
    z-index: 10;
    overflow: hidden;
    max-width: 200px;

    &::after {
      content: "";
      position: absolute;
      background-color: var(--accent_color);
      width: 0px;
      height: 0px;
      border-radius: 50%;
      left: 50%;
      top: 50%;
      transform: translate(-50%, -50%);
      transition: all 0.3s ease-in;
      z-index: -1;
    }
    &:hover {
      &:after {
        transform-origin: center;
        transition: all 0.2s ease-in;
        width: 200%;
        height: 200%;
      }
    }
  }
</style>
